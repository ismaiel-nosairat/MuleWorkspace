        <logger level="INFO" doc:name="Logger"/>
        <echo-component doc:name="Echo"/>
        <file:outbound-endpoint path="C:\Users\IAN\Desktop" outputPattern="ex1.txt" responseTimeout="10000" doc:name="File"/>
    </flow>
</mule>
